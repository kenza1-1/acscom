{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="container">

    <div class="row">

      
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        
        {% for produit in produits %}
        <div class="row">

          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="{{path('show',{'id':produit.id})}}"><img class="card-img-top" src="{{produit.image}}" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#">{{produit.titre}}</a>
                </h4>
                <h5>{{produit.formatedPrice}}</h5>
                <p class="card-text">{{produit.description}}</p>
                <p class="f">jjjj</p>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>

          {% endfor %}

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>

{% endblock %}
