{% extends 'base.html.twig' %}

{% block title %}{{produit.titre}}{% endblock %}
{% block description %}{{produit.description}}{% endblock %}

{% block body %}

<div class="row">
  <div class="col-lg-6 mt-5 pt-5">
    <div class="col-lg-9">
      <div class="card  center-block mt-5 pt-5">
        <img class="card-img-top img-fluid  max-width: 100%" src="{{produit.image}}" alt="">
          <div class="card-body">
              <h3 class="card-title">{{produit.titre}}</h3>
              <h4>{{produit.formatedPrice | tva (produit.tva.multiplicateur)}} £</h4>
              <p class="card-text">{{produit.description}}</p>
              <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
              4.0 stars
          </div>{# <a href="#" class="btn btn-success">Acheter</a> #}
      </div>
    </div>
  </div>

   {% if panier[produit.id] is not defined  %}
      <form action="{{path('ajouter',{'id' :produit.id})}}" class="col-lg-6 mt-5 pt-5" method="get">
        <select name="qte" class="spanl">
          {% for i in 1..10 %}
            <option value="{{ i }}">{{ i }}</option>
          {% endfor %}
        </select>

        <div>
          <button class="btn btn-primary">Ajouter au panier</button>              
        </div>

      </form>
    {% else %}
      <div class='mt-5 pt-5'>
        <a href="{{path ('panier')}}" class="btn btn-primary">Le produit est déja dans votre panier</a>              
      </div>
    {% endif %}    
</div>
          
{% endblock %}
