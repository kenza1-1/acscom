{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper mt-5 pt-5">
  <div class="container">
    <h1>Formulaire d'Inscription</h1>
    {{ form_start(form)}}
    <div class="form-group">
      <div>
        {{form_row(form.nom, {'attr': {'placeholder':'Votre nom', 'class':'form-control'}})}}
      </div>
    </div>

    <div class="form-group">
      <div>
        {{form_row(form.username, {'attr': {'placeholder':'Votre pr√©nom', 'class':'form-control'}})}}  
      </div>
    </div>

    <div class="form-group">
      <div>
        {{form_row(form.email, {'attr': {'placeholder':'Votre email', 'class':'form-control'}})}}  
      </div>
    </div>

    <div class="form-group">
      <div>
        {{form_row(form.password, {'attr': {'placeholder':'Votre mot de pasee', 'class':'form-control'}})}}  
      </div>
    </div>

    <div class="form-group">
      <div>
        {{form_row(form.confirm_password, {'attr': {'placeholder':'Veuillez confirmer votre mot de passe', 'class':'form-control'}})}}  
      </div>
    </div>

    <button type="submit" class="btn btn-success">Inscription</button>
    {{form_end(form)}}
  </div>
</div>

{% endblock %}
