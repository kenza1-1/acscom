{% extends 'base2.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}

 

    <div class="col-md-2 position-absolute">

        <h3 class="my-4 ml-3">Catégories</h3>
        <div class="blackLink list-group">
            {% for categorie in categories %}
                <a href=" {{ path('categorieproduits', {'categorie' : categorie.id}) }}" 
                class="list-group-item">{{categorie.nom}}</a>
            {% endfor %}
               
        </div> 

    </div>
    
    <div class="col-md-2 offset-md-10 position-absolute " style="margin-right: 10vh">
        {% if not cart is empty %}
        
            <h3 class="blackLink my-4 ml-3"><a href="{{ path('cart_index') }}">Panier</a></h3>
            <div class="list-group ">
                {% for item in cart %}

                    <a href="{{path('show',{'id':item.product.id})}}" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <div class="row">
                                <h5 class="mb-1">{{ item.product.titre }}</h5>
                                <small class="text-muted ml-1"> <b> x {{ item.quantity }}</b></small>

                            </div>
                            <p class="mb-1">{{ item.product.prix * item.quantity }} €</p>
                        </div>
                        <div class="d-flex w-100 justify-content-between">
                            <img src="{{ item.product.image }}" alt="" style="height: 6vh;">
                        </div>
                            <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm position-relative" style="height: 15%;width: 15%; z-index:100; left: 11.1rem; bottom: 3rem; ">
                                <i class="fas fa-trash"></i>
                            </a>
                    </a>

                {% endfor %}
                <a type="button" type="button" href="{{ path('cart_index') }}" class="btn btn-primary offset-md-4" style="width: 60%;">Passer à l'achat</a>
            </div>

        {% endif %}
    </div>
    
    
          
{% endblock %}
