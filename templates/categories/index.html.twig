{% extends 'base2.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}

 

    <div class="col-md-2 position-absolute">

        <h3 class="my-4 ml-3">Catégories</h3>
        <div class="list-group">
            {% for categorie in categories %}
                <a href=" {{ path('categorieproduits', {'categorie' : categorie.id}) }}" class="list-group-item">{{categorie.nom}}</a>
            {% endfor %}
               
        </div> 

    </div>
    <div class="col-md-2 offset-md-10 position-absolute " style="margin-right: 10vh">
        {% if not cart is empty %}
        
            <h3 class="my-4 ml-3">Panier</h3>
            <div class="list-group ">
                {% for item in cart %}

                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ item.product.titre }}</h5>
                        <small class="text-muted">x {{ item.quantity }}</small>
                        </div>
                        <p class="mb-1">{{ item.product.prix * item.quantity }} €</p>
                        <img src="{{ item.product.image }}" alt="" style="height: 6vh">
                    </a>

                {% endfor %}
            </div>

        {% endif %}
    </div>
    
    
          
{% endblock %}
