{% extends 'base.html.twig' %}
{% set totalHT = 0  %}
{% set totalTTC = 0 %}
{% set tva =0 %}





{% block title %} Panier{% endblock %}

{% block body %}

<div class="container mb-4 mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Produit</th>
                            <th scope="col">disponibilié</th>
                            <th scope="col" class="text-center">Quantité</th>
                            <th scope="col" class="text-right">Prix unitaire</th>
                            <th scope="col" class="text-right">Total HT</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits%}
                            <tr>
                                <form action="{{path('ajouter' , {'id' : produit.id})}}" method='get'>
                                    <td><img src="{{produit.image}}" width="50" height="50" /> </td>
                                    <td>{{produit.titre}}</td>
                                    <td>In stock</td>
                                    <td>
                                    <select name="qte" class="span1" onChange="this.form.submit()" id="">
                                    {% for i in 1..10 %}
                                    <option value="{{i}}" {% if i == panier[produit.id] %} selected="selected" {% endif %}>{{i}}</option>
                                    {% endfor %}
                                    {# <a href="{{ path ('supprimer', {'id' : produit.id})}}"><i class="icoon-trash"></i></a> #}
                                    </select>
                                    </td>
                                    <td class="text-right">{{produit.prix}} €</td>
                                    <td class="text-right">{{produit.prix * panier[produit.id]}}€</td>
                                    {# <a href="{{ path ('supprimer', {'id' : produit.id})}}"><i class=" fa fa-trash"></i></a>
                                    <td class="text-right"> <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </button> </td> #}
                                    <td><a href="{{ path ('supprimer', {'id' : produit.id})}}"><i class=" fa fa-trash"></i></a></td>
                                </form>
                            </tr>
                              {% set totalHT = totalHT + (produit.prix * panier[produit.id] ) %}
                              {% set totalTTC = totalTTC + (produit.prix * panier[produit.id]) | tva (produit.tva.multiplicateur)   %}
                              

                        {% endfor %}
